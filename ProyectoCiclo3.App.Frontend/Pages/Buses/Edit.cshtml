@model ProyectoCiclo3.App.Frontend.Pages.EditBusModel
@{
    var bus = Model.Bus;
}

<div class="text-">
  <form method="post">
      <label for="id" class="form-label">Digite el ID:</label>
      <input type="text" class="form-control" id="id" name="id" placeholder="ID bus" asp-for="@bus.id">
      <label for="marca" class="form-label">Digite la marca:</label>
      <input type="text" class="form-control" id="marca" name="marca" placeholder="Marca bus" asp-for="@bus.marca">
      <label for="modelo" class="form-label">Digite el modelo:</label>
      <input type="number" class="form-control" id="modelo" name="modelo" placeholder="Modelo bus" asp-for="@bus.modelo">
